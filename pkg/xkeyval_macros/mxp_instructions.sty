% misc/MXP instructions
\newcommand{\setMxpInstructionTypeOne}      [2]     {\setMxpInstructionTypeOneName   _{#1} \big[\;#2\;]}
\newcommand{\setMxpInstructionTypeTwo}      [1]     {
    \setkeys[MXP]{var}{#1}
    \setMxpInstructionTypeTwoName _{\cmdMXP@var@anchorRow}
    \left[ \begin{array}{ll}
        \utt{Rel. row offset:}  & \cmdMXP@var@relOffset   \\
        \utt{Instruction:}      & \cmdMXP@var@instruction \\
        \utt{Offset high part:} & \cmdMXP@var@offsetHi    \\
        \utt{Offset low  part:} & \cmdMXP@var@offsetLo    \\
    \end{array} \right]
}

\newcommand{\setMxpInstructionTypeThree}    [1]     {
