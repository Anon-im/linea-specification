\newcommand{\boxx}[2]{%
	\draw[fill = #2]
	#1
	-- coordinate (top) ++ (\hori, 0)
	-- ++ (0, -\verti)
	-- coordinate (bot) ++ (-\hori, 0)
	-- cycle;
}
\newcommand{\fboxx}[3]{% x, delta, color
	\draw[fill=#3]
	#1 -- ++ (#2, 0)
	-- ++ (0, -\verti)
	-- ++ (-#2, 0)
	-- cycle;
}